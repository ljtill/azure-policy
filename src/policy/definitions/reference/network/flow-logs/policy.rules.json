{
  "if": {
    "allOf": [
      {
        "field": "type",
        "equals": "Microsoft.Network/networkSecurityGroups"
      }
    ]
  },
  "then": {
    "effect": "deployIfNotExists",
    "details": {
      "type": "Microsoft.Network/networkWatchers/flowLogs",
      "deploymentScope": "resourceGroup",
      "existenceScope": "subscription",
      "existenceCondition": {
        "field": "Microsoft.Network/networkWatchers/flowLogs/enabled",
        "equals": "true"
      },
      "roleDefinitionIds": [
        "/providers/microsoft.authorization/roleDefinitions/4d97b98b-1d4f-4787-a291-c67834d212e7"
      ],
      "deployment": {
        "properties": {
          "mode": "Incremental",
          "parameters": {
            "location": {
              "value": "[field('location')]"
            },
            "retention": {
              "value": "[parameters('retention')]"
            },
            "interval": {
              "value": "[parameters('interval')]"
            },
            "securityGroupId": {
              "value": "[field('id')]"
            },
            "storageAccountId": {
              "value": "[parameters('storageAccountId')]"
            },
            "workspaceId": {
              "value": "[parameters('workspaceId')]"
            }
          },
          "template": {
            "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
            "contentVersion": "1.0.0.0",
            "parameters": {
              "location": {
                "type": "string"
              },
              "retention": {
                "type": "int",
                "defaultValue": 5
              },
              "interval": {
                "type": "int",
                "defaultValue": 60
              },
              "securityGroupId": {
                "type": "string"
              },
              "storageAccount": {
                "type": "string"
              },
              "workspaceId": {
                "type": "string"
              }
            },
            "variables": {},
            "resources": [
              {
                "type": "Microsoft.Network/networkWatchers",
                "apiVersion": "2020-07-01",
                "name": "[concat('NetworkWatcher_', toLower(parameters('location')))]",
                "location": "[parameters('location')]"
              },
              {
                "type": "Microsoft.Network/networkWatchers/flowLogs",
                "apiVersion": "2019-11-01",
                "name": "[concat('NetworkWatcher_', toLower(parameters('location')),  '/', 'flowLogs')]",
                "location": "[parameters('location')]",
                "properties": {
                  "enabled": true,
                  "format": {
                    "type": "JSON",
                    "version": 2
                  },
                  "retentionPolicy": {
                    "days": "[parameters('retention')]",
                    "enabled": true
                  },
                  "flowAnalyticsConfiguration": {
                    "networkWatcherFlowAnalyticsConfiguration": {
                      "enabled": true,
                      "trafficAnalyticsInterval": "[parameters('interval')]",
                      "workspaceResourceId": "[parameters('workspaceId')]"
                    }
                  },
                  "storageId": "[parameters('storageAccountId')]",
                  "targetResourceId": "[parameters('securityGroupId')]"
                },
                "dependsOn": [
                  "[concat('NetworkWatcher_', toLower(parameters('location')))]"
                ]
              }
            ],
            "outputs": {}
          }
        }
      }
    }
  }
}
