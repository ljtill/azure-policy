{
    "properties": {
        "displayName": "Subnets missing Network Security Groups",
        "description": "Audit Virtual Networks for Subnets without Network Security Groups associated",
        "parameters": {},
        "policyRule": {
            "if": {
                "anyOf": [
                    {
                        "allOf": [
                            {
                                "field": "type",
                                "equals": "Microsoft.Network/virtualNetworks/subnets"
                            },
                            {
                                "not": {
                                    "field": "Microsoft.Network/virtualNetworks/subnets/networkSecurityGroup.id",
                                    "equals": "true"
                                }
                            }
                        ]
                    }
                ]
            },
            "then": {
                "effect": "audit"
            }
        }
    }
}